{
  "swagger": {
    "info": {
      "title": "API Server",
      "description": "Rest API server",
      "version": "1.0.0"
    }
  },
  "entryFile": "src/server/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "basePath": "/api",
    "outputDirectory": "./public",
    "specVersion": 3
  },
  "routes": {
    "basePath": "/api",
    "routesDir": "./src",
    "entryFile": "./src/index.ts"
  }
}